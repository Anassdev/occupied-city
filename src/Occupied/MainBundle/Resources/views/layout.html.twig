<!DOCTYPE html>
<html ng-app="occupied">
<head>
    <base
        {% if app.environment == 'dev' %}
            href="/app_dev.php/"
        {% else %}
            href="/"
        {% endif %}
        >
    <title>Occupied City</title>
    {% stylesheets '@css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
</head>
<body>
    <h1>occupied.city</h1>

    <a ui-sref="home">Home</a>
    <a ui-sref="about">About</a>

    <div ui-view></div>

    {% block content %}{% endblock %}

    {% javascripts '@jslibs' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% javascripts '@js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

</body>
</html>
